# ============================================================================
# MASTER NETWORK CONFIGURATION (DECOUPLED MODE)
# ============================================================================

# --- EXTERNAL ACCESS (For pgAdmin) ---
EFICHE_DB_HOST_EXTERNAL=localhost
EFICHE_DB_PORT_EXTERNAL=5434

AIRFLOW_DB_HOST_EXTERNAL=localhost
AIRFLOW_DB_PORT_EXTERNAL=5433

# --- INTERNAL DOCKER ACCESS (Updated for External DBs) ---
# We use 'host.docker.internal' so Airflow can "call out" to the host
EFICHE_DB_HOST_INTERNAL=host.docker.internal
EFICHE_DB_PORT_INTERNAL=5433

AIRFLOW_DB_HOST_INTERNAL=host.docker.internal
AIRFLOW_DB_PORT_INTERNAL=5433

# ============================================================================
# CREDENTIALS PLACEHOLDERS
# ============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=50000

# Airflow Admin
AIRFLOW_USER=your_airflow_user
AIRFLOW_PASSWORD=your_airflow_password
AIRFLOW_EMAIL=your_email@example.com
AIRFLOW_FIRSTNAME=FirstName
AIRFLOW_LASTNAME=LastName

AIRFLOW_DB_USER=your_db_user
AIRFLOW_DB_PASSWORD=your_db_password
AIRFLOW_DB_NAME=your_airflow_metadata_db

# Clinical Data Configuration
PG_USER=your_pg_user
PG_PASSWORD=your_pg_password
PG_DATABASE_OPERATIONAL=your_operational_db
PG_DATABASE_ANALYTICS=your_analytics_db
PG_ADMIN_EMAIL=your_admin_email@example.com
DB_PASSWORD=your_db_password

POSTGRES_ANALYTICS_DB=your_analytics_db
DB_NAME=your_operational_db

# ============================================================================
# APP SETTINGS
# ============================================================================
ENVIRONMENT=production
DEBUG=false
BATCH_SIZE=1000
MAXBATCH_SIZE_ROWS=5000
SOURCE=huggingface

# Superset
SUPERSET_PORT=8088

# Hugging Face
HUGGINGFACE_DATASET=MedHK23/IMT-CXR
HF_CACHE_DIR=./cache
HF_NUM_PROC=4
HF_TOKEN=your_huggingface_token

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# ETL VARS
NUM_ROWS=2500
APPEND_MODE=true
